{
    "name": "aedFaCT",
    "version": "1.0",
    "description": "A Chrome-based Web browser extension that helps users fact-checking through expert opinions",
    "author": "Enes Altuncu",
    "permissions": ["activeTab", "declarativeContent", "storage", "*://<ENTER SERVER IP ADDRESS HERE!>/*"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16":  "images/icon16.png",
            "24":  "images/icon24.png",
            "32":  "images/icon32.png",
            "48":  "images/icon48.png",
            "64":  "images/icon64.png",
            "128": "images/icon128.png",
            "1000": "images/icon1000.png"
        }
    },
    "icons": {
        "16":  "images/icon16.png",
        "24":  "images/icon24.png",
        "32":  "images/icon32.png",
        "48":  "images/icon48.png",
        "64":  "images/icon64.png",
        "128": "images/icon128.png",
        "1000": "images/icon1000.png"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "images/icon16.png",
        "images/icon24.png",
        "images/icon32.png",
        "images/icon48.png",
        "images/icon64.png",
        "images/icon128.png",
        "images/icon1000.png"
    ],
    "manifest_version": 2
}
